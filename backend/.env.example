# Copy to .env and adjust for your environment.
# Set to development for dev-only OTP (digits 1–6, no email/SMS sent)
ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=khaleeji

# JWT
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (add frontend origin, e.g. Vite default 5173)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# SMTP (Gmail: use App Password, not account password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=خليجي
